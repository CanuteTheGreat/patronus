{
  "dashboard": {
    "title": "SD-WAN Network Performance",
    "tags": ["patronus", "sdwan", "network"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Path Health Overview",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "patronus_path_health_score",
          "legendFormat": "{{path_id}}"
        }],
        "options": {
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "orange"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Paths",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 3, "h": 4},
        "targets": [{
          "expr": "count(patronus_path_health_score > 50)"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "BFD Sessions Status",
        "type": "stat",
        "gridPos": {"x": 9, "y": 0, "w": 3, "h": 4},
        "targets": [{
          "expr": "sum(patronus_bfd_session_status{state=\"up\"})"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Total Bandwidth",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(rate(patronus_bytes_tx_total[5m])) * 8"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Path Latency (p95)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [{
          "expr": "histogram_quantile(0.95, rate(patronus_latency_seconds_bucket[5m])) * 1000",
          "legendFormat": "{{path_id}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Packet Loss",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [{
          "expr": "rate(patronus_packets_dropped_total[5m]) / rate(patronus_packets_sent_total[5m]) * 100",
          "legendFormat": "{{path_id}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Throughput by Path",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(patronus_bytes_tx_total[5m]) * 8",
            "legendFormat": "TX {{path_id}}"
          },
          {
            "expr": "rate(patronus_bytes_rx_total[5m]) * 8",
            "legendFormat": "RX {{path_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "stacking": {"mode": "none"}
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Jitter",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [{
          "expr": "patronus_jitter_ms",
          "legendFormat": "{{path_id}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 9,
        "title": "BFD Detection Times",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [{
          "expr": "patronus_bfd_detection_time_ms",
          "legendFormat": "{{path_id}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 900, "color": "yellow"},
                {"value": 2000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Failover Events",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [{
          "expr": "increase(patronus_failover_count_total[5m])",
          "legendFormat": "{{path_id}}"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "fillOpacity": 80
            }
          }
        }
      }
    ]
  }
}
