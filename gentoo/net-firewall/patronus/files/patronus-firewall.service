[Unit]
Description=Patronus Firewall Service
After=network-pre.target
Before=network.target
Wants=network-pre.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/patronus firewall apply
ExecStop=/usr/bin/patronus firewall flush

# Firewall needs elevated privileges
User=root
Group=root

[Install]
WantedBy=multi-user.target
